@using EightTracks.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <link rel="stylesheet" href="~/css/styles.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Hello friend!</title>
  </head>
  <body>

    <h1>All of your 8-tracks!</h1>
    <ul>
      @if (Model.Count == 0)
      {
        <p>You have no 8-tracks in your list!</p>
      }
      @if(Model.Count != 0)
      {
        @foreach (EightTrackTape eighttracktape in Model)
        {
          <li><a href='/eighttracktapes/@eighttracktape.GetId()'>@eighttracktape.Name</a></li>
        }
      }

    </ul>
    <a href="/eighttracks/new">Add a new 8-track tape</a>
    <a href="/eighttracks/searchform">Search For an 8-track tape</a>
    <form action="/eighttracks/delete" method="post">
      <button class="btn btn-success" type="submit" name="button">Clear all tapes</button>
    </form>

  </body>
</html>
